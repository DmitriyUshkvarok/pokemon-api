<div class='card'>
  <div class='card-img-top'>
    <img src='{{sprites.front_default}}' alt='{{name}}' />
  </div>
  <div class='card-body'>
    <h2 class='card-title'>Имя:{{name}}</h2>
    <p class='cardtext'>Вес:{{weight}}</p>
    <p class='cardtext'>Рост:{{height}}</p>
    <p class='cardtext'>Умения</p>
  </div>

  <ul class='list-group'>
    {{#each abilities}}
      <li class='list-group-item'>{{ability.name}}</li>
    {{/each}}
  </ul>
</div>